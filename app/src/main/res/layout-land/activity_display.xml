<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DisplayActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="#f3f3f3"
        android:gravity="center"
        android:text="地面平整度"
        android:textSize="26px" />

    <TextView
        android:id="@+id/updateTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51px"
        android:layout_marginTop="75px"
        android:text="当前数据更新速率:"
        android:textSize="20px" />


    <ImageView
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_gravity="right"
        android:layout_marginTop="16px"
        android:layout_marginRight="57px"
        android:src="@mipmap/ic_setting"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="924px"
        android:layout_height="537px"
        android:layout_gravity="center"
        android:background="@mipmap/main_bg">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="251px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="158px"
            android:src="@mipmap/ic_left_biaochi2" />

        <LinearLayout
            android:layout_width="61px"
            android:layout_height="325px"
            android:layout_marginTop="71px"
            android:background="@mipmap/bg_left_data"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leftNum"
                android:layout_width="53px"
                android:layout_height="57px"
                android:layout_marginTop="4px"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/bg_number"
                android:gravity="center"
                android:text="--"
                android:textColor="#812F00"
                android:textSize="25px" />

            <FrameLayout
                android:layout_width="61px"
                android:layout_marginTop="5px"
                android:layout_height="268px"
                android:layout_gravity="center_horizontal">

                <bluetooth.jie.com.jie_bluetooth.ProgressSeekBar
                    android:id="@+id/leftSeekBar"
                    android:layout_width="53px"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="256px"
                    android:background="@mipmap/left_bg" />

                <ImageView
                    android:layout_width="61px"
                    android:layout_height="259px"
                    android:background="@mipmap/left" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31px"
            android:layout_marginTop="100px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左探测器"
                android:textColor="#812F00"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px"
                android:text="平整度状态"
                android:textColor="#a3a3a3"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/left_level_state"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginTop="14px"
                android:src="@mipmap/ic_un_plane" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="连接状态"
                android:textColor="#a3a3a3"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/left_connect_state"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_marginTop="14px"
                android:src="@mipmap/ic_plane" />

            <Switch
                android:id="@+id/left_bth_state"
                android:layout_width="wrap_content"
                android:layout_height="24px"
                android:layout_marginTop="20px" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="251px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="158px"
            android:src="@mipmap/ic_right_biaochi2" />

        <LinearLayout
            android:layout_width="61px"
            android:layout_height="325px"
            android:layout_marginTop="71px"
            android:background="@mipmap/bg_right_data"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rightNum"
                android:layout_width="53px"
                android:layout_height="57px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4px"
                android:background="@mipmap/bg_number"
                android:gravity="center"
                android:text="--"
                android:textColor="#812F00"
                android:textSize="25px" />

            <FrameLayout
                android:layout_width="61px"
                android:layout_marginTop="5px"
                android:layout_height="268px"
                android:layout_gravity="center_horizontal">

                <bluetooth.jie.com.jie_bluetooth.ProgressSeekBar
                    android:id="@+id/rightSeekBar"
                    android:layout_width="53px"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="250px"
                    android:background="@mipmap/right_bg" />

                <ImageView
                    android:layout_width="61px"
                    android:layout_height="259px"
                    android:background="@mipmap/right" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31px"
            android:layout_marginTop="100px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右探测器"
                android:textColor="#812F00"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px"
                android:text="平整度状态"
                android:textColor="#a3a3a3"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/right_level_state"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginTop="14px"
                android:src="@mipmap/ic_un_plane" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="连接状态"
                android:textColor="#a3a3a3"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/right_connect_state"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_marginTop="14px"
                android:src="@mipmap/ic_plane" />


            <Switch
                android:id="@+id/right_bth_state"
                android:layout_width="wrap_content"
                android:layout_height="24px"
                android:layout_marginTop="20px" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="48px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/beginMeasure"
            android:layout_width="172px"
            android:layout_height="48px"
            android:layout_marginRight="104px"
            android:background="@drawable/green_cornor_bg"
            android:gravity="center"
            android:text="开始测量"
            android:textColor="@color/white"
            android:textSize="24px" />

        <TextView
            android:id="@+id/exitApp"
            android:layout_width="172px"
            android:layout_height="48px"
            android:background="@drawable/yellow_cornor_bg"
            android:gravity="center"
            android:text="退出程序"
            android:textColor="@color/white"
            android:textSize="24px" />


    </LinearLayout>


</FrameLayout>